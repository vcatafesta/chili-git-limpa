pkgname=chili-git-limpa
pkgdesc="Remove arquivos maiores que 100MB do hist√≥rico Git com estilo"
pkgver=$(date +%Y%m%d)
pkgrel=$(date +%H%M)
arch=('any')
#url="ssh://git@github.com/chililinux/${pkgname}"
url="https://github.com/chililinux/${pkgname}"
source=("git+${url}.git")
license=('MIT')
depends=('git' 'git-filter-repo')
sha256sums=('SKIP')


package() {
  install -d "$pkgdir/usr/local/bin"
  install -m755 "$srcdir/usr/local/bin/chili-git-limpa-100MB+" "$pkgdir/usr/local/bin/chili-git-limpa-100MB+"
}
